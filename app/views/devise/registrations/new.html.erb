<div class="rsg">
<h1>注册</h1>
<div class="rsg_info cf">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <ul>
      <li><%= f.label :name, "用户名：" %>
        <%= f.text_field :name %></li>

      <li><%= f.label :password, "密码：" %>
        <%= f.password_field :password %></li>

      <li><%= f.label :password_confirmation, "确认：" %>
        <%= f.password_field :password_confirmation %></li>

      <li><%= f.label :email, "E-mail：" %>
        <%= f.email_field :email %></li>

      <li><%= f.label :phone, "联系电话：" %>
        <%= f.telephone_field :phone %></li>


    </ul>
    <div class="rsg_act">
      <%= f.submit "提交", :class => "blue_btn" %>
    </div>
  <% end %>
</div>
</div>