<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>

  <li><%= f.label :phone, "联系电话：" %>
    <%= f.phone_field :phone, :class => "required", :alt => "联系电话" %></li>

  <li><%= f.label :email, "E-mail：" %>
    <%= f.email_field :email, :class => "required", :alt => "E-mail" %></li>

  <li><%= f.label :current_password, "密码：" %>
    <%= f.password_field :current_password, :class => "required", :alt => "密码"  %></li>

  <div class="uinfo_act">
    <button class="blue_btn" onclick="return Validate(this)" >确认</button>
    <button class="blue_btn cancel">取消</button>
  </div>
<% end %>
<script>
  function Validate(obj){
    var flag = true;
    $(obj).parents("form").find(".required").each(function(){
      if($.trim($(this).val()) == ""){
        alert($(this).attr("alt") + "不能为空！");
        flag = false;
      }
    });
    return flag;
  }
</script>