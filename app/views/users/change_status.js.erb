<%if @user.status==0 %>
$('#status_btn').html('<%= button_to "启用", "/user/enable/#{@user.id}",remote:true,class: "blue_btn" %>')
$('#user_status').html('禁用')
<% else %>
$('#status_btn').html('<%= button_to "禁用", "/user/disable/#{@user.id}",remote:true,class: "blue_btn" %>')
$('#user_status').html('正常')
<% end %>
