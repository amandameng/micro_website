<!DOCTYPE html>
<html>
  <head>
    <title>微网站</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render "shared/head_nav" %>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, id: "flash#{name}"%>
    <% end %>
    <%= yield %>

  </body>
</html>
